{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc -d",
    "build:watch": "tsc -d --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha -r ts-node/register --reporter spec test/**/*.ts",
    "test:debug": "mocha -r ts-node/register --reporter spec --debug-brk --inspect --",
    "test-with-trace": "mocha -r ts-node/register --reporter spec --async-stack-traces --full-trace test/**/*.ts"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "dependencies": {
    "@types/lodash": "^4.14.191",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.3.7",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.4"
  },
  "private": true
}
